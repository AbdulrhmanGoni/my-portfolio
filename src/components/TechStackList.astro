---
import type { ProjectData } from "../data/projects";

interface Props {
    techStack: ProjectData["techStack"];
    size?: "base" | "small";
    containerClasses?: string;
}

const { techStack, size = "base", containerClasses } = Astro.props;
---

<div class={containerClasses}>
    <h4 class=`font-semibold mb-2 ${size == "small" ? "text-base" : "text-lg"}`>
        Tech Stack:
    </h4>
    <div class={`flex flex-wrap ${size == "small" ? "gap-1.5" : "gap-2"}`}>
        {
            techStack.map((tech) => (
                <span
                    class={`${size == "small" ? "px-2 text-[13px] hover:-translate-y-[1px]" : "px-3 text-sm hover:-translate-y-[2px]"} 
                    py-1 rounded-md border font-medium bg-soft border-soft/25
                    transition-all duration-300 hover:bg-soft/65`}
                >
                    {tech}
                </span>
            ))
        }
    </div>
</div>
