---
import githubIcon from "../assets/icons/github.svg";

interface Props {
    link: string;
    size?: "sm" | "base";
}

const { link, size = "base" } = Astro.props;
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class={`flex items-center gap-2 ${size == "sm" ? "px-4 py-2" : "px-6 py-3"} rounded-lg font-semibold text-sm transition-all duration-300 bg-white/10 border border-white/20 hover:bg-white/20 hover:shadow-lg`}
>
    <img src={githubIcon.src} alt="GitHub Icon" class="size-4 invert" />
    GitHub Repo
</a>
